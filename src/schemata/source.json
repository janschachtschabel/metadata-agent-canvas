      },
      "system": {
        "path": "schema:sourceOrganization",
        "uri": "sdo:sourceOrganization",
        "datatype": "object",
        "multiple": false,
        "required": false,
        "ask_user": true,
        "ai_fillable": true,
        "shape": {
          "@type": ["Organization", "EducationalOrganization"],
          "url": { "type": "uri" }
        },
        "index": { "keyword": true }
