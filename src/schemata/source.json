        "label": "Quellentyp (Untertyp)",
        "description": "Spezifischer Untertyp der Quelle."
      },
      "system": {
        "path": "ccm:source_kind",
        "uri": "sdo:additionalType",
        "datatype": "array",
        "multiple": true,
        "required": true,
        "ask_user": true,
        "ai_fillable": true,
        "index": { "keyword": true },
        "vocabulary": {
          "type": "closed",
          "concepts": [
            { "label": "Kollektion/Kanal", "schema_types": ["sdo:CreativeWork", "sdo:Collection"] },
