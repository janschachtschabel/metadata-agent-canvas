{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "metadata-agent-webcomponent": {
      "projectType": "application",
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist/app",
            "index": "src/index.html",
            "main": "src/main.ts",
            "polyfills": ["zone.js", "src/polyfills.ts"],
            "tsConfig": "tsconfig.json",
            "assets": [
              "src/assets", 
              "src/schemata",
              {
                "glob": "test-sidebar.html",
                "input": "./",
                "output": "../"
              }
            ],
            "styles": ["src/styles.scss"],
            "scripts": [],
            "extractLicenses": false,
            "allowedCommonJsDependencies": [
              "camelcase",
              "decamelize",
              "p-retry",
              "p-queue",
              "base64-js",
              "semver"
            ]
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ],
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                }
              ],
              "outputHashing": "all"
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "buildTarget": "metadata-agent-webcomponent:build"
          },
          "configurations": {
            "production": {
              "buildTarget": "metadata-agent-webcomponent:build:production"
            }
          }
        }
      }
    }
  }
}
